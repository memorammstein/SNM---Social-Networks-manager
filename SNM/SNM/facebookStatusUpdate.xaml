<Window x:Class="SNM.facebookStatusUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SNM" Width="600" Height="375"
        WindowStartupLocation="CenterScreen" Background="#FF1A1A1A" WindowStyle="None" ResizeMode="NoResize">
    <Grid>
        <StackPanel Name="stkAllFormContent" Orientation="Vertical"
                    HorizontalAlignment="Stretch" VerticalAlignment="Stretch" Margin="0,0,0,5">
            <TextBox AcceptsReturn="True" HorizontalAlignment="Stretch" Height="250"
                     Margin="15,15,15,25" Name="txtStatusText" FontSize="20"></TextBox>
            <StackPanel Name="stkButtons" Orientation="Horizontal" Margin="0,0,10,0"
                        VerticalAlignment="Bottom" HorizontalAlignment="Right">
                <Button Name="btnCancelar" Content="Cancelar" Width="100" Height="35" Margin="0,0,15,0" Click="btnCancelar_Click"></Button>
                <Button Name="btnEnviar" Content="Enviar" Width="100" Height="35" Click="btnEnviar_Click"></Button>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
