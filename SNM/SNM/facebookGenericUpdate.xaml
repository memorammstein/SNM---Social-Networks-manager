<Window x:Class="SNM.facebookGenericUpdate"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="SNM" Height="400" Width="300" WindowStyle="None" ResizeMode="NoResize" KeyUp="Window_KeyUp" WindowStartupLocation="CenterScreen" Background="#FF1A1A1A" Icon="/SNM;component/SNM_icon.ico">
    <Grid>
        <StackPanel Name="stkUpdateTypeButtons" Orientation="Vertical" HorizontalAlignment="Center" VerticalAlignment="Center">
            <Button Name="btnStatus" Content="status" FontSize="20" Height="70" Width="200" Click="btnStatus_Click"/>
            <Button Name="btnPicture" Content="foto" FontSize="20" Height="70" Width="200" Margin="0,50" Click="btnPicture_Click"/>
            <Button Name="btnVideo" Content="video" FontSize="20" Height="70" Width="200" Click="btnVideo_Click"/>
        </StackPanel>
    </Grid>
</Window>
